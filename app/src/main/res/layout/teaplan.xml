<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title_rout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/teal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_tea_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="教 学 方 案"
            android:textColor="@color/white"
            android:textSize="18sp" />
        </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:hint="填写姓名"
        android:id="@+id/et_teaname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <EditText
        android:hint="填写教授课程"
        android:id="@+id/et_teacourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/></LinearLayout>
    <EditText
        android:hint="填写方案内容"
        android:id="@+id/et_teaplan"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:text="保存"
        android:id="@+id/btn_saveplan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="上传"
        android:id="@+id/btn_uploadfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <Button
            android:text="下载"
            android:id="@+id/btn_downloadfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>