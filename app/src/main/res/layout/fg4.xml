<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghostwhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/teal">

        <TextView
            android:id="@+id/title_center_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我  的"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/find_line0"
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_below="@+id/title_rout"
        android:layout_marginTop="24dp"
        android:background="@color/white100"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/me_info_rout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/find_line0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/me_avatar_imv"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/app_icon" />

        <TextView
            android:id="@+id/me_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/me_avatar_imv"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/me_avatar_imv"
            android:layout_toRightOf="@+id/me_avatar_imv"
            android:singleLine="true"
            android:text="未登录, 请点击登录"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_chevron_right_grey600_24dp" />

        <!--<TextView-->
            <!--android:id="@+id/me_message_tv"-->
            <!--android:layout_width="200dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:singleLine="true"-->
            <!--android:text="你的签名"-->
            <!--android:textColor="@color/darkgrey"-->
            <!--android:textSize="13sp"-->
            <!--android:layout_alignBottom="@+id/me_avatar_imv"-->
            <!--android:layout_alignLeft="@+id/me_name_tv"-->
            <!--android:layout_alignStart="@+id/me_name_tv" />-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/find_line"
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_below="@+id/me_info_rout"
        android:background="@color/white100"
        android:orientation="horizontal" />


    <RelativeLayout
        android:id="@+id/me_settings_rout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/item_selector"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/find_line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_settings_grey600_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_toRightOf="@+id/imageView7"
            android:text="设置"
            android:textColor="@color/gray700"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_chevron_right_grey600_24dp" />
    </RelativeLayout>

</RelativeLayout>